{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "extends": "nx/presets/npm.json",
  "npmScope": "mf-mr",

  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "!{projectRoot}/dist/**",
      "!{projectRoot}/build/**"
    ],
    "production": [
      "default",
      "!{projectRoot}/**/*.spec.*",
      "!{projectRoot}/**/*.test.*",
      "!{projectRoot}/**/*.stories.*"
    ]
  },

  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    },
    "dev": {
      "dependsOn": ["^dev"],
      "cache": false
    }
  },

  "projects": {
    "shell": {
      "implicitDependencies": [
        "@mf-mr/hero",
        "@mf-mr/features",
        "@mf-mr/pricing",
        "@mf-mr/testimonials",
        "@mf-mr/footer",
        "@mf-mr/ui-components"
      ],
      "targets": {
        "dev": {
          "executor": "nx:run-commands",
          "options": {
            "commands": [
              { "command": "nx dev @mf-mr/ui-components", "readyWhen": "built in" },
              { "command": "nx dev @mf-mr/hero", "readyWhen": "built in" },
              { "command": "nx dev @mf-mr/features", "readyWhen": "built in" },
              { "command": "nx dev @mf-mr/pricing", "readyWhen": "built in" },
              { "command": "nx dev @mf-mr/testimonials", "readyWhen": "built in" },
              { "command": "nx dev @mf-mr/footer", "readyWhen": "built in" },
              { "command": "nx dev shell" }
            ],
            "parallel": true
          }
        }
      }
    },

    "@mf-mr/hero": {
      "implicitDependencies": ["@mf-mr/ui-components"]
    },
    "@mf-mr/features": {
      "implicitDependencies": ["@mf-mr/ui-components"]
    },
    "@mf-mr/pricing": {
      "implicitDependencies": ["@mf-mr/ui-components"]
    },
    "@mf-mr/testimonials": {
      "implicitDependencies": ["@mf-mr/ui-components"]
    },
    "@mf-mr/footer": {
      "implicitDependencies": ["@mf-mr/ui-components"]
    },
    "@mf-mr/ui-components": {}
  }
}
